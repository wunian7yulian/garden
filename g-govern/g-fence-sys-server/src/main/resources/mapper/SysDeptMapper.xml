<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lynwood.g.govern.fence.sys.mapper.SysDeptMapper">

    <resultMap id="BaseResultMap" type="com.lynwood.g.govern.fence.sys.pojo.entity.SysDept">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="deptName" column="dept_name" jdbcType="VARCHAR"/>
            <result property="fId" column="f_id" jdbcType="BIGINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="createBy" column="create_by" jdbcType="BIGINT"/>
            <result property="updateBy" column="update_by" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,dept_name,f_id,
        create_time,update_time,create_by,
        update_by
    </sql>
    <resultMap id="SysDeptExtMap" type="com.lynwood.g.govern.fence.sys.pojo.entity.SysDeptExtDTO">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="dept_name" property="deptName" jdbcType="VARCHAR"/>
        <result column="f_id" property="fId" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_by" property="createBy" jdbcType="BIGINT"/>
        <result column="update_by" property="updateBy" jdbcType="BIGINT"/>
    </resultMap>
    <select id="selectByFId" resultMap="SysDeptExtMap">
        select id,dept_name,f_id

        from sys_dept
        <where>
            <if test="fId != null">
                f_id = #{fId,jdbcType=NUMERIC}
            </if>
        </where>
    </select>
</mapper>
